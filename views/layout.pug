doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')

    title= title

    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css', integrity='sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u', crossorigin='anonymous')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css', integrity='sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp', crossorigin='anonymous')

    link(rel='icon' type='image/png' sizes='32x32' href='https://brand.learnersguild.org/favicon-32x32.png')
    block styles

  body
    .navbar.navbar-inverse.navbar-fixed-top
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') Coach Queue

        #navbar.collapse.navbar-collapse
          ul.nav.navbar-nav
            if user.roles.includes( 'moderator' )
              li.dropdown
                a(href='#', class='dropdown-toggle', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
                  | Admin
                  span.caret
                ul.dropdown-menu
                  li
                    a(href='/admin') Upload CSV
                  li
                    a(href='/admin/coaches') Assign Coaches
                  li
                    a(href='/admin/goals') Assign Goals
            li
              a(href='/admin/summary') Current Queues
            li
              a(href='/stats') Stats
            li
              a(target='_blank', href='https://github.com/GuildCrafts/coach-queue/issues/new' ) Submit Issue

          if user.is_coach
            form.navbar-form.navbar-right.coach-stats( data-handle=user.handle )
              .btn-group
                a.btn.btn-default.btn-xs.navbar-button(href='/stats') Primary &nbsp;
                  span.badge.primary-statistics= statistics.primary
                a.btn.btn-default.btn-xs.navbar-button(href='/stats') Communal &nbsp;
                  span.badge.communal-statistics= statistics.communal


    .container
      block content

    script(src='/socket.io/socket.io.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.18.1/moment.js')
    script(src='/javascripts/global/setup.js')

    script(src='https://code.jquery.com/jquery-3.2.1.min.js', integrity='sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=', crossorigin='anonymous')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js', integrity='sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa', crossorigin='anonymous')

    block scripts

